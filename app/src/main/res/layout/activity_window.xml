<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.recyclerview.RecyclerViewActivity">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddDragView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Floating Drag View" />


        <Button
            android:id="@+id/btnAddFixedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Floating Fixed View" />

        <Button
            android:id="@+id/btnRemoveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove All Floating View" />

    </LinearLayout>
</layout>